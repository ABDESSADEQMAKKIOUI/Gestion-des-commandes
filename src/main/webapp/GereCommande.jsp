      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>cammondes tableaux</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">code</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Client</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                                        <% ArrayList<Commande> commandes = CommandeDAO.getAll(); %>
                                        <% for (int i = 0; i < commandes.size(); i++) {
                                        	Commande commande = commandes.get(i);
                                           %>
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="assets/img/team-2.jpg" class="avatar avatar-sm me-3"
                                                            alt="user1">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm"><%= commande.getCode() %></h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0"><%= commande.getClient().getLogin() %></p>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-success"><%= commande.getStats()%></span>
                                            </td>
                                            <td class="align-middle text-center">
                                            <form action="showArticles.jsp" method="post">
                                                    <input type="hidden" name="commandeId" value="<%= commande.getId() %>">
                                                     <button type="submit">Consulter les details</button>
                                            </form>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                </table>
              </div>
